   <h2 class="text-3xl font-bold text-center mb-12 text-white">Requisitos Previos</h2>
   <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
     {requirements.map(req => (
       <div class="bg-[#151933] border border-purple-500/20 rounded-xl p-6 hover:border-purple-500/40 transition-all">
         <h3 class="text-xl font-semibold mb-3 text-purple-400">{req.title}</h3>
         <p class="text-white/70">{req.description}</p>
       </div>
     ))}
   </div>
 </div>
</section>