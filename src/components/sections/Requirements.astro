const requirements = [
  {
    title: "Sin requisitos técnicos",
    description: "No necesitas saber programar. Trabajamos con herramientas amigables y guiadas para ejecutivos."
  },
  {
    title: "Trae 1–2 procesos reales",
    description: "Identifica tareas repetitivas o de alto impacto. Las usaremos en ejercicios prácticos para tu organización."
  },
  {
    title: "Equipo y acceso",
    description: "Computador portátil y acceso a tus cuentas corporativas (Google/Microsoft) para aprovechar la sesión."
  }
